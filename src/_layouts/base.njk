<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% if title %}{{ title }} - {% endif %}Regenerative Assets</title>
    <meta name="description" content="{% if description %}{{ description }}{% else %}Regenerative Assets is a software company building tools to support companies and projects working on innovative projects in regenerative land management, regenerative economics, and positive social impact.{% endif %}">
    <meta name="theme-color" content="#181825">
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/assets/images/favicon.ico">
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Tailwind CSS -->
    <link rel="stylesheet" href="/css/tailwind.css">
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="{% if title %}{{ title }} - {% endif %}Regenerative Assets">
    <meta property="og:description" content="{% if description %}{{ description }}{% else %}Building tools for regenerative land management and economics{% endif %}">
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://regen-assets.com">
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{% if title %}{{ title }} - {% endif %}Regenerative Assets">
    <meta name="twitter:description" content="{% if description %}{{ description }}{% else %}Building tools for regenerative land management and economics{% endif %}">
</head>
<body class="font-sans bg-aurora-bg text-aurora-text min-h-screen">
    <!-- Header -->
    {% include "header.njk" %}
    
    <!-- Main Content -->
    <main>
        {{ content | safe }}
    </main>
    
    <!-- Footer -->
    {% include "footer.njk" %}
    
    <!-- Smooth scrolling for anchor links -->
    <script>
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
        
        // Mobile menu toggle
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        
        if (mobileMenuButton && mobileMenu) {
            mobileMenuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });
        }
    </script>
</body>
</html> 